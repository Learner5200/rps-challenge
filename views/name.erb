<h2>Please enter your name:</h2>

<form action="/name" method="post">
  <label for="name_one">
    Player One Name
    <input type="text" name="name_one">
  </label>
  
  <% if @mode == "Multiplayer" %>
    <label for="name_two">
      Player Two Name
      <input type="text" name="name_two">
    </label>
  <% end %>

  <input type="submit" value="Submit">
</form>
